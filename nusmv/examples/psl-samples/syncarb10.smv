      & (forall i in {1:7}: ! (e[i].ack-out & e[ 8].ack-out))
      & (forall i in {1:8}: ! (e[i].ack-out & e[ 9].ack-out))
      & (forall i in {1:9}: ! (e[i].ack-out & e[10].ack-out))
      ) ;

PSLSPEC
