                           ! (e[1].ack-out & e[ 2].ack-out)
      & (forall i in {1:2}: ! (e[i].ack-out & e[ 3].ack-out))
      & (forall i in {1:3}: ! (e[i].ack-out & e[ 4].ack-out))
