      !(e[1].ack-out & e[2].ack-out)

      & !(e[1].ack-out & e[3].ack-out)
      & !(e[2].ack-out & e[3].ack-out)

      & !(e[1].ack-out & e[4].ack-out)
      & !(e[2].ack-out & e[4].ack-out)
      & !(e[3].ack-out & e[4].ack-out)

      & !(e[1].ack-out & e[5].ack-out)
